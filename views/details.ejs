<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TON Wallet Details</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet" />
  </head>
  <body class="bg-gray-100">
    <header class="bg-blue-500 text-white p-4">
      <h1 class="text-2xl">TON Wallet Details</h1>
    </header>
    <main class="container mx-auto p-8">
      <section class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-semibold mb-4">Wallet Address</h2>
        <p class="text-gray-700"><strong>Address:</strong> <%= address %></p>
      </section>

      <section class="mt-8 bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-semibold mb-4">Transaction Data</h2>
        <table class="w-full">
          <thead>
            <tr class="bg-gray-200">
              <th class="py-2 px-4 text-left">Field</th>
              <th class="py-2 px-4 text-left">Value</th>
            </tr>
          </thead>
          <tbody>
            <% for (const key in data) { %>
            <tr>
              <td class="py-2 px-4 text-gray-700 font-semibold capitalize"><%= key %></td>
              <td class="py-2 px-4 text-gray-600"><%= data[key] %></td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </section>

      <section class="mt-8 bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-semibold mb-4">Transaction History</h2>
        <table class="w-full">
          <thead>
            <tr class="bg-gray-200">
              <th class="py-2 px-4 text-left">Age</th>
              <th class="py-2 px-4 text-left">Hash</th>
              <th class="py-2 px-4 text-left">Value</th>
            </tr>
          </thead>
          <tbody>
            <% for (const txn of txns) { %>
            <tr>
              <td class="py-2 px-4 text-gray-600"><%= txn.age %></td>
              <td class="py-2 px-4 text-gray-600 w-1/4"><%= txn.hash %></td>
              <td class="py-2 px-4 text-gray-600"><%= txn.value %></td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </section>
    </main>
    <footer class="text-center p-4 mt-8 bg-gray-300">
      <p>&copy; <%= new Date().getFullYear() %> Utkarsh Joshi. All rights reserved.</p>
    </footer>
  </body>
</html>
